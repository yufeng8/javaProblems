void f(int x) {
    x++;
}

void g() {
    int x = 0;
    f(x);
    System.out.println(x); // ==> 0
}



////////////////////////////////////////////////////////////////////////////////////////////////////////////////



void f(int[] x) {
    x[0]++;
}

void g() {
    int[] x = new int[1];
    f(x);
    System.out.println(x[0]); // ==> 1
}
